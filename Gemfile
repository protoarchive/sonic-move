  gem 'byebug'
  gem 'pry-rails'
  gem 'web-console', '~> 2.0'
  gem 'spring'

  # Rspec
  gem 'rspec-rails', '~> 3.0'
  gem 'shoulda-matchers'
  gem 'factory_girl_rails'
  # Watchers
  gem 'guard-rspec', require: false
  # Reporting
  gem 'simplecov', require: false
end

